<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp"
    tools:context="android.primer.bryanalvarez.sige.Fragments.Fragment_Crear_Servicio_Tecnico">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">



        <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear Servicio Tecnico"
                android:textSize="30dp"
                android:textStyle="bold"
                android:id="@+id/textView"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteX="16dp"
                android:layout_marginTop="15dp">


                <TextView
                    android:id="@+id/textViewTipo"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Tipo de servicio:"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="16dp" />


                <Spinner
                    android:id="@+id/spinnerTipoServicio"
                    android:layout_width="170dp"
                    android:layout_height="50dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout1"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteX="16dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/textViewClienteVisitar"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Cliente a visitar:"
                    android:textSize="15dp"/>

                <Spinner
                    android:id="@+id/spinnerClienteVisitar"
                    android:layout_width="170dp"
                    android:layout_height="50dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout16"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteX="16dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Novedad:"
                    android:textSize="15dp"
                    android:id="@+id/textViewNovedad"/>

                <Spinner
                    android:id="@+id/spinnerNovedad"
                    android:layout_width="170dp"
                    android:layout_height="50dp"/>

            </LinearLayout>




            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteX="16dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Tipo falla:"
                    android:textSize="15dp"
                    android:id="@+id/textViewTipoFalla"/>

                <Spinner
                    android:id="@+id/spinnerTipoFalla"
                    android:layout_width="170dp"
                    android:layout_height="50dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteX="16dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Relacionar con:"
                    android:textSize="15dp"
                    android:id="@+id/textViewTipoServicioRelacionado"/>

                <Spinner
                    android:id="@+id/spinnerTipoServicioRelacionado"
                    android:layout_width="170dp"
                    android:layout_height="50dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout14"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteX="16dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Visita relacionada:"
                    android:textSize="15dp"
                    android:id="@+id/textViewServicioRelacionado"/>

                <Spinner
                    android:id="@+id/spinnerServicioRelacionado"
                    android:layout_width="170dp"
                    android:layout_height="50dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout15"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteX="16dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Horometro:"
                    android:textSize="15dp"
                    android:id="@+id/textViewHorometro" />

                <EditText
                    android:id="@+id/et_horometro"
                    android:layout_width="170dp"
                    android:inputType="number"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout13"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteX="16dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Puntos:"
                    android:textSize="15dp"
                    android:id="@+id/textViewPrecio" />

                <EditText
                    android:id="@+id/et_precio"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteX="16dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="90dp"
                    android:layout_height="32dp"
                    android:text="Operador Asignado:" />
                <EditText
                    android:layout_marginTop="7dp"
                    android:id="@+id/et_operador_asignado_st"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout9"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteX="16dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Tecnico Asignado:" />
                <Spinner
                    android:id="@+id/spinnerTecnico_st"
                    android:layout_width="170dp"
                    android:layout_height="50dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout10"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteX="16dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Descripcion corta"/>

                <EditText
                    android:id="@+id/et_desc_corta_st"
                    android:layout_width="170dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteX="16dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Descripcion servicio tecnico:" />
                <EditText
                    android:id="@+id/et_desc_st"
                    android:layout_width="170dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>



            <LinearLayout
                android:id="@+id/linearLayout13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout12"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteX="16dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Fecha de programacion:" />
                <EditText
                    android:id="@+id/et_mostrar_fecha_programacion_picker"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_marginTop="20dp"
                    android:inputType="date" />
                <ImageButton
                    android:id="@+id/ib_obtener_fecha_programacion"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/ic_date"/>

            </LinearLayout>




            <Button
                android:id="@+id/buttonServicioTecnico"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:background="@color/colorAccent"
                android:text="Crear servicio tecnico"
                android:textAlignment="center"
                android:textColor="#fff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />


        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ProgressBar
            android:id="@+id/progressBarCrearST"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

    </LinearLayout>

</FrameLayout>
