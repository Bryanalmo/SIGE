<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingLeft="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puntos de lubricación:"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"/>

            <RadioGroup
                android:id="@+id/radioGroup_PL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_bueno_PL"
                    android:text="B"
                    android:layout_marginLeft="5dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_regular_PL"
                    android:text="R" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_malo_PL"
                    android:text="M" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_na_PL"
                    android:text="N/A" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nivel de aceite:"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"/>

            <RadioGroup
                android:id="@+id/radioGroup_NA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_bueno_NA"
                    android:layout_marginLeft="5dp"
                    android:text="B"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_regular_NA"
                    android:text="R" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_malo_NA"
                    android:text="M" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_na_NA"
                    android:text="N/A" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nivel de hidraulico:"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"/>

            <RadioGroup
                android:id="@+id/radioGroup_NH"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_bueno_NH"
                    android:layout_marginLeft="5dp"
                    android:text="B"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_regular_NH"
                    android:text="R" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_malo_NH"
                    android:text="M" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_na_NH"
                    android:text="N/A" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aceite de caja:"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"/>

            <RadioGroup
                android:id="@+id/radioGroup_AC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_bueno_AC"
                    android:layout_marginLeft="5dp"
                    android:text="B"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_regular_AC"
                    android:text="R" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_malo_AC"
                    android:text="M" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_na_AC"
                    android:text="N/A" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado unidades de corte:"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"/>

            <RadioGroup
                android:id="@+id/radioGroup_UC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_bueno_UC"
                    android:layout_marginLeft="5dp"
                    android:text="B"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_regular_UC"
                    android:text="R" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_malo_UC"
                    android:text="M" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_na_UC"
                    android:text="N/A" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nivel y tipo de refrigerante:"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"/>

            <RadioGroup
                android:id="@+id/radioGroup_NR"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_bueno_NR"
                    android:layout_marginLeft="5dp"
                    android:text="B"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_regular_NR"
                    android:text="R" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_malo_NR"
                    android:text="M" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_na_NR"
                    android:text="N/A" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correas:"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"/>

            <RadioGroup
                android:id="@+id/radioGroup_CO"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_bueno_CO"
                    android:layout_marginLeft="5dp"
                    android:text="B"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_regular_CO"
                    android:text="R" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_malo_CO"
                    android:text="M" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_na_CO"
                    android:text="N/A" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estructura y chasis:"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"/>

            <RadioGroup
                android:id="@+id/radioGroup_EC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_bueno_EC"
                    android:layout_marginLeft="5dp"
                    android:text="B"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_regular_EC"
                    android:text="R" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_malo_EC"
                    android:text="M" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_na_EC"
                    android:text="N/A" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/et_horometro_actual_revision"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Horometro actualizado" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:text="¿Hay fugas existentes?"
                android:gravity="center"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="No"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"/>

            <Switch
                android:id="@+id/switchFugas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checked="false"
                android:textOn="Si"
                android:textOff="No"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Si"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutComentario"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <EditText
                android:id="@+id/et_comentario_fuga_revision"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:hint="Comentario de fuga" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutComentario2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/et_comentario_final_revision"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Comentario final" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:paddingTop="5dp"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:text="Pulse si desea añadir repuestos recomendados"
                android:layout_marginRight="10dp"/>


            <ImageButton
                android:id="@+id/btn_agregar_repuestos"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/ic_crear"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:gravity="right"
            android:background="#fff"
            android:layout_marginStart="16dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/btn_guardar_revision_maquina"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:background="#fff"
                android:shadowColor="#fff"
                android:text="Guardar"
                android:textColor="@color/colorAccent" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>